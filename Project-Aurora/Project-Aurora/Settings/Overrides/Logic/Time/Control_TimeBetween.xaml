<UserControl x:Class="Aurora.Settings.Overrides.Logic.Control_TimeBetween"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:u="clr-namespace:Aurora.Utils"
             xmlns:l="clr-namespace:Aurora.Settings.Overrides.Logic"
             mc:Ignorable="d">
    <Grid u:GridHelper.Columns="1*,Auto,1*,Auto,1*">
        <l:Control_EvaluatablePresenter x:Name="Value" Expression="{Binding Value, Mode=TwoWay}" EvalType="{x:Type l:Time}" />
        <TextBlock Text="Between" Grid.Column="1" VerticalAlignment="Center" />
        <l:Control_EvaluatablePresenter x:Name="Start" Expression="{Binding Start, Mode=TwoWay}" EvalType="{x:Type l:Time}"  Grid.Column="2" />
        <TextBlock Text="And" Grid.Column="3" VerticalAlignment="Center" />
        <l:Control_EvaluatablePresenter x:Name="End" Expression="{Binding End, Mode=TwoWay}" EvalType="{x:Type l:Time}"  Grid.Column="4" />
    </Grid>
</UserControl>
