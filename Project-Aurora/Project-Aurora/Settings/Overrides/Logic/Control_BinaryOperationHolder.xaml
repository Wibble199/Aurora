<UserControl x:Class="Aurora.Settings.Overrides.Logic.Control_BinaryOperationHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Settings.Overrides.Logic"
             mc:Ignorable="d">
    
    <StackPanel Orientation="Horizontal">
        <!-- Operand 1 -->
        <local:Control_EvaluatablePresenter Expression="{Binding Operand1, Mode=TwoWay}" Application="{Binding Application}" EvalType="{Binding EvalType}" VerticalAlignment="Center" />

        <!-- Operator -->
        <ComboBox x:Name="operatorSelection" SelectedValue="{Binding SelectedOperator, Mode=TwoWay}" SelectedValuePath="Value" DisplayMemberPath="Key" Margin="10,2" VerticalAlignment="Center" MinWidth="60" />

        <!-- Operand 2 -->
        <local:Control_EvaluatablePresenter Expression="{Binding Operand2, Mode=TwoWay}" Application="{Binding Application}" EvalType="{Binding EvalType}" VerticalAlignment="Center" />
    </StackPanel>
</UserControl>
