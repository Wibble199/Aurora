<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseGroup" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource BaseGroupBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BaseGroupBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlBorderRadius}" />
    </Style>

</ResourceDictionary>