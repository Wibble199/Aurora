<UserControl x:Class="Aurora.Profiles.Overlay.Control_Overlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Profiles.Overlay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl>
        <TabItem Header="Overview for Overlay">
            <StackPanel Margin="10">
                <CheckBox Content="Enable Overlay layers for Aurora" IsChecked="{Binding Path=Settings.IsEnabled}" />
                <CheckBox x:Name="showOverlaysInPreview" Content="Show Overlays and Underlays in Application Preview" Margin="0,8" Checked="ShowOverlaysInPreviewCheckBox_Checked" Unchecked="ShowOverlaysInPreviewCheckBox_Checked" />
                <TextBlock TextWrapping="Wrap" Text="The overlays application is not strictly speaking an application, it in fact displays over the top of every other profile. You can add whatever you like to this profile." />
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>
