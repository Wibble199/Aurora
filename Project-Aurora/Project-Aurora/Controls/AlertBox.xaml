<UserControl x:Class="Aurora.Controls.AlertBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:Aurora.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Grid.RowSpan="999" Grid.ColumnSpan="999"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <UserControl.Resources>
        <c:AlertBoxIconConverter x:Key="AlertBoxIconConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Rectangle Fill="#8000" />

        <Border MaxWidth="520" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="1" Background="{StaticResource ForegroundElementBrush}" CornerRadius="{StaticResource ControlBorderRadius}" SnapsToDevicePixels="True">
            <DockPanel Margin="16" LastChildFill="True">
                <!-- Icon -->
                <Image DockPanel.Dock="Left" Source="{Binding Path=Icon, Converter={StaticResource AlertBoxIconConverter}}" Width="48" Height="48" Margin="0,0,16,0" />

                <!-- Title -->
                <TextBlock DockPanel.Dock="Top" Text="{Binding Title}" FontSize="18" Foreground="{StaticResource ForegroundTextBrush}" />

                <!-- Buttons -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Margin" Value="8,0,0,0" />
                            <Setter Property="Padding" Value="16,6" />
                            <EventSetter Event="Click" Handler="Button_Click" />
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Yes" />
                    <Button Content="No" />
                </StackPanel>

                <!-- Message -->
                <TextBlock Margin="0,12" Text="{Binding Text}" TextWrapping="Wrap" Foreground="{StaticResource ForegroundTextBrush}" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
