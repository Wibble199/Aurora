<UserControl x:Class="Aurora.Controls.StringPropertyField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:Aurora.Controls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <c:FieldEditorTemplateSelector x:Key="TemplateSelector" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="BasicTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ContentPresenter ContentTemplateSelector="{StaticResource TemplateSelector}" />
</UserControl>
