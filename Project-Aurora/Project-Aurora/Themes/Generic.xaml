<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Aurora.Controls"
    xmlns:l="clr-namespace:Aurora.Settings.Overrides.Logic">


    <Style TargetType="{x:Type c:Icon}">
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:Icon}">
                    <Rectangle Fill="{TemplateBinding Foreground}">
                        <Rectangle.OpacityMask>
                            <ImageBrush ImageSource="{Binding Path=Source, RelativeSource={RelativeSource TemplatedParent}}" Stretch="Uniform" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
